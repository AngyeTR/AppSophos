<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AppSophos" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/purple</item>
        <item name="colorOnBackground">#FFFFFF</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue</item>
        <item name="colorSecondaryVariant">@color/pink</item>
        <item name="colorOnSecondary">@color/green</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimary</item>
        <item name="android:color">@color/white</item>
        <item name="appBarLayoutStyle">?attr/colorPrimary</item>
        <!-- Customize your theme here. -->
        <item name="background">@color/white</item>
        <item name="cardBackgroundColor">@color/whiteTransparent</item>
        <item name="colorTertiary">@color/white</item>
        <item name="colorTertiaryContainer">@color/white</item>
        <item name="colorOnTertiary">@color/white</item>
        <item name="title">@string/app_dark_mode_spanish</item>

    </style>
    <style name="SplashTheme" parent="Theme.AppSophos">
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>
</resources>